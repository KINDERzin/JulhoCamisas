<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulhoCamisas.Acabamento"
             Shell.NavBarIsVisible="False">

    <Grid BackgroundColor="#d9d9d9">
       <Grid.RowDefinitions>
              <RowDefinition Height="250"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/> 
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
       </Grid.RowDefinitions>
       <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="80"/>
       </Grid.ColumnDefinitions>

       <Image Source="logo.png"
              Aspect="AspectFit"
              Margin="0, 20, 0, 0"
              Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2"/>

       <Label Text="ACABAMENTO"
              FontSize="Title"
              TextColor="Black"
              HorizontalTextAlignment="Center"
              Margin="0, 20"
              Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="2"/>

       
       <Label Text="Tipo:"
              TextColor="Black"
              Margin="20, 10, 0, 5"
              Grid.Row="2"
              Grid.Column="0"
              Grid.ColumnSpan="2"/>

       <Entry x:Name="TipoEntry"
              TextColor="Black"
              IsEnabled="False"
              Margin="20, 0, 20, 10"
              Grid.Row="3"
              Grid.Column="0"/>
       <Button Text="EDITAR"
               TextColor="Black"
               HorizontalOptions="Start"
               Clicked="EditarTipo_Clicked"
               BackgroundColor="#d9d9d9"
               Grid.Row="3"
               Grid.Column="1"/>

       <Label Text="Cor:"
              TextColor="Black"
              Margin="20, 10, 0, 5"
              Grid.Row="4"
              Grid.Column="0"
              Grid.ColumnSpan="2"/>

       <Entry x:Name="CorEntry"
              Margin="20, 0, 20, 10"
              IsEnabled="False"
              Grid.Row="5"
              Grid.Column="0"/>
       <Button Text="EDITAR"
              TextColor="Black"
               HorizontalOptions="Start"
               Clicked="EditarCor_Clicked"
               BackgroundColor="#d9d9d9"
               Grid.Row="5"
               Grid.Column="1"/>

       <Label Text="Quantidade:"
              TextColor="Black"
              Margin="20, 10, 0, 5"
              Grid.Row="6"
              Grid.Column="0"/>

       <Entry x:Name="QuantidadeEntry"
              Margin="20, 0, 20, 10"
              IsEnabled="False"
              Keyboard="Numeric"
              Grid.Row="7"
              Grid.Column="0"/>
       <Button Text="EDITAR"
               HorizontalOptions="Start"
               Clicked="EditarQuantidade_Clicked"
               BackgroundColor="#d9d9d9"
               Grid.Row="7"
               Grid.Column="1"/>

       <Label Text="Fornecedor:"
              TextColor="Black"
              Margin="20, 10, 0, 5"
              Grid.Row="8"
              Grid.Column="0"/>

       <Entry x:Name="FornecedorEntry"
              Margin="20, 0, 20, 10"
              IsEnabled="False"
              Keyboard="Numeric"
              Grid.Row="9"
              Grid.Column="0"/>
       <Button Text="EDITAR"
               HorizontalOptions="Start"
               Clicked="EditarFornecedor_Clicked"
               BackgroundColor="#d9d9d9"
               Grid.Row="9"
               Grid.Column="1"/>

       <Button Text="SALVAR"
              Margin="20, 0, 20, 5"
              Clicked="Salvar_Clicked"
              BackgroundColor="#d9d9d9"
              Grid.Row="10"
              Grid.Column="0"
              Grid.ColumnSpan="2"/>

       <Button Text="VOLTAR"
              Margin="20, 0"
              Clicked="Voltar_Clicked"
              BackgroundColor="#d9d9d9"
              Grid.Row="11"
              Grid.Column="0"
              Grid.ColumnSpan="2"/>
    </Grid>
</ContentPage>