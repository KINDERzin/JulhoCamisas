<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulhoCamisas.CadastrarCliente"
             Shell.NavBarIsVisible="False">

    <ScrollView BackgroundColor="#d9d9d9">   
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
              
       <HorizontalStackLayout Grid.Row="0"
                              Grid.ColumnSpan="2">
                <Image Source="logo.png"
                       Aspect="AspectFit"
                       Margin="50, 20, 0, 0"/>

                <Label Text="Cadastrar cliente"
                        FontSize="50"
                        TextColor="Black"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        Margin="300, 20"/>
            </HorizontalStackLayout>   

       <Frame BackgroundColor="#d1d1d1"
       Grid.Row="1"
       Grid.ColumnSpan="2"
       Margin="50, 20">

              <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

            <Label Text="Nome:"
                   TextColor="Black"
                   Margin="20, 10, 0, 5"
                   Grid.Row="0"/>

            <Entry Placeholder="Digite o nome" 
                   TextColor="Black"
                   Margin="20, 0, 20, 10"
                   x:Name="NomeEntry"
                   Grid.Row="1"/>

            <Label Text="Sobrenome:"
                   Margin="20, 10, 0, 5"
                   TextColor="Black"
                   Grid.Row="2" />

            <Entry Placeholder="Digite o sobrenome" 
                   TextColor="Black"
                   x:Name="SobrenomeEntry"
                   Margin="20, 0, 20, 10"
                   Grid.Row="3"/>

            <Label Text="CPF:"
                   TextColor="Black"
                   Margin="20, 10, 0, 5"
                   Grid.Row="4"/>

            <Entry Placeholder="Digite o CPF" 
                   TextColor="Black"
                   Margin="20, 0, 20, 10"
                   x:Name="CpfEntry"
                   Grid.Row="5"/>

            <Label Text="Telefone:"
                   TextColor="Black"
                   Margin="20, 10, 0, 5"
                   Grid.Row="6"/>

            <Entry Placeholder="Digite o telefone"
                   Keyboard="Telephone"  
                   TextColor="Black"
                   Margin="20, 0, 20, 10" 
                   x:Name="TelefoneEntry"
                   Grid.Row="7"/>

            <Label Text="Endereço:"
                   TextColor="Black"
                   Margin="20, 10, 0, 5"
                   Grid.Row="8"/>

            <Entry Placeholder="Digite o endereço c/ número" 
                   TextColor="Black"
                   Margin="20, 0, 20, 10"
                   x:Name="EnderecoEntry"
                   Grid.Row="9"/>
              </Grid>
           </Frame>

              <Button Text="CONFIRMAR"
                      TextColor="Black"
                      BackgroundColor="#8b8b8b"
                      Clicked="OnSalvarDadosClicked"
                      Grid.Row="2"
                      Grid.Column="0"
                      Margin="50, 0, 10, 10"/>

              <Button Text="VOLTAR"
                      TextColor="Black"
                      BackgroundColor="#8b8b8b"
                      Clicked="VoltarClicked"
                      Grid.Row="2"
                      Grid.Column="1"
                      Margin="10, 0, 50, 10"/>
        </Grid> 
    </ScrollView>
</ContentPage>