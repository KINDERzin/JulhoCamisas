<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulhoCamisas.DeletarItemEstoque">
    <ScrollView>
        <StackLayout Padding="30" Spacing="20">
            <Image Source="logo.png" HeightRequest="100" VerticalOptions="CenterAndExpand" />
            <Label Text="DELETAR ITEM DO ESTOQUE" FontSize="24" HorizontalOptions="Center" />
            <Entry Placeholder="Item" x:Name="ItemEntry"/>
            <Entry Placeholder="Senha" x:Name="PasswordEntry" IsPassword="True"/>
            <Button Text="CONFIRMAR" Clicked="OnConfirmClicked"/>
            <Button Text="VOLTAR" Clicked="OnBackClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
