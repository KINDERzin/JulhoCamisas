<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulhoCamisas.CadastrarItemEstoque">
    <ScrollView>
        <StackLayout Padding="30" Spacing="20">
            <Image Source="logo.png" HeightRequest="100" VerticalOptions="CenterAndExpand" />
            <Label Text="CADASTRAR ITEM ESTOQUE" FontSize="24" HorizontalOptions="Center" />
            <StackLayout Spacing="10">
                <Entry Placeholder="Tipo:" x:Name="typeEntry"/>
                <Entry Placeholder="Quantidade:" x:Name="quantityEntry"/>
                <Entry Placeholder="Fornecedor:" x:Name="supplierEntry"/>
            </StackLayout>
            <Button Text="CONFIRMAR" Clicked="OnConfirmClicked" />
            <Button Text="VOLTAR" Clicked="OnBackClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>
