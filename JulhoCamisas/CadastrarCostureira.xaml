<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulhoCamisas.CadastrarCostureira">
    <ScrollView>
        <StackLayout Padding="30" Spacing="20">
            <Image Source="logo.png" HeightRequest="100" VerticalOptions="CenterAndExpand" />
            <Label Text="CADASTRAR COSTUREIRA" FontSize="24" HorizontalOptions="Center" />
            <Entry Placeholder="Tipo" x:Name="TypeEntry"/>
            <Entry Placeholder="Quantidade" x:Name="QuantityEntry"/>
            <Entry Placeholder="Fornecedor" x:Name="SupplierEntry"/>
            <Entry Placeholder="Id" x:Name="IdEntry"/>
            <Button Text="CONFIRMAR" Clicked="OnConfirmClicked"/>
            <Button Text="VOLTAR" Clicked="OnBackClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
