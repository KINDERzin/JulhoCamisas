<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulhoCamisas.CadastrarCostureira"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#d9d9d9">
       <ScrollView>
              <Grid>
                     <Grid.RowDefinitions>
                            <RowDefinition Height="250"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                     </Grid.RowDefinitions>
                     <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                     </Grid.ColumnDefinitions>

                     <HorizontalStackLayout Grid.Row="0"
                                            Grid.ColumnSpan="2">
                            <Image Source="logo.png"
                                   Aspect="AspectFit"
                                   Margin="50, 20, 0, 0"/>

                            <Label Text="Cadastrar costureira"
                                   FontSize="50"
                                   TextColor="Black"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"
                                   Margin="200, 20"/>
                     </HorizontalStackLayout>

                     <Frame BackgroundColor="#d1d1d1"
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="50, 20, 50, 0">
                            <VerticalStackLayout>

                                   <Label Text="Nome:"
                                          TextColor="Black"
                                          Margin="20, 10, 0, 5"
                                          Grid.Row="2"/>  

                                   <Entry Placeholder="Nome"
                                          TextColor="Black"
                                          Keyboard="Text"
                                          Margin="20, 0, 20, 10"
                                          x:Name="NomeEntry"
                                          Grid.Row="3"/>

                                   <Label Text="Endereço:"
                                          TextColor="Black"
                                          Margin="20, 10, 0, 5"
                                          Grid.Row="4"/>  

                                   <Entry Placeholder="Endereço"
                                          TextColor="Black"
                                          Keyboard="Text"
                                          Margin="20, 0, 20, 10"
                                          x:Name="EnderecoEntry"
                                          Grid.Row="5"/>

                                   <Label Text="Telefone:"
                                          TextColor="Black"
                                          Margin="20, 10, 0, 5"
                                          Grid.Row="6"/> 

                                   <Entry Placeholder="Email"
                                          TextColor="Black"
                                          Keyboard="Text"
                                          Margin="20, 0, 20, 10"
                                          x:Name="TelefoneEntry"
                                          Grid.Row="7"/>

                                   <Label Text="CPF:"
                                          TextColor="Black"
                                          Margin="20, 10, 0, 5"
                                          Grid.Row="8"/> 

                                   <Entry Placeholder="CPF"
                                          TextColor="Black"
                                          Keyboard="Text"
                                          Margin="20, 0, 20, 10"
                                          x:Name="CpfEntry"
                                          Grid.Row="9"/>
                            </VerticalStackLayout>
                     </Frame>

        <Button Text="CONFIRMAR"
                TextColor="Black"
                BackgroundColor="#8b8b8b"
                Margin="50, 10, 10, 10"
                Clicked="OnConfirmClicked"
                Grid.Row="2"
                Grid.Column="0"/>

        <Button Text="VOLTAR"
                TextColor="Black"
                BackgroundColor="#8b8b8b"
                Margin="10, 10, 50, 10"
                Clicked="OnBackClicked"
                Grid.Row="2"
                Grid.Column="1"/>
        
    </Grid> 
    </ScrollView>
</ContentPage>
