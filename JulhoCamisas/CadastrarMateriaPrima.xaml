<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulhoCamisas.CadastrarMateriaPrima"
             Title="Cadastrar Matéria Prima">
    <ScrollView>
        <StackLayout Padding="10" Spacing="20">
            <Image Source="tshirt_image.png" HorizontalOptions="Center" HeightRequest="100" WidthRequest="100"/>
            <Label Text="CADASTRAR MATÉRIA PRIMA" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center"/>

            <StackLayout Spacing="15">
                <Label Text="Tipo:" FontSize="Medium"/>
                <Entry x:Name="TipoEntry" Placeholder="Tipo"/>
                
                <Label Text="Quantidade:" FontSize="Medium"/>
                <Entry x:Name="QuantidadeEntry" Placeholder="Quantidade" Keyboard="Numeric"/>
                
                <Label Text="Fornecedor:" FontSize="Medium"/>
                <Entry x:Name="FornecedorEntry" Placeholder="Fornecedor"/>
            </StackLayout>

            <Button Text="CONFIRMAR" TextColor="White" BackgroundColor="Green" Clicked="OnConfirmarButtonClicked"/>
            <Button Text="VOLTAR" Clicked="OnVoltarButtonClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
