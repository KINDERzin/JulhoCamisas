            <Label Text="CADASTRAR FORNECEDOR" FontSize="24" HorizontalOptions="Center" />
            <StackLayout Spacing="10">
                <Entry Placeholder="Nome:" x:Name="nameEntry"/>
                <Entry Placeholder="Email:" x:Name="emailEntry"/>
