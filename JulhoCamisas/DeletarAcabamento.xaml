
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulhoCamisas.DeletarAcabamento" Â  

             Title="Deletar Acabamento">

    <Grid>
        <Image Source="camiseta.png"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <Label Text="DELETAR ACABAMENTO"
               FontSize="Title"
               HorizontalTextAlignment="Center"
               Margin="0, 20" />

        <Entry Placeholder="Acabamento"
               Keyboard="Text"
               Margin="20"
               x:Name="acabamentoEntry" />

        <Entry Placeholder="Senha"
               Keyboard="Text"
               IsPassword="True"
               Margin="20"
               x:Name="senhaEntry" />

        <Button Text="CONFIRMAR"
                Margin="20"
                Clicked="Confirmar_Clicked" />

        <Button Text="VOLTAR"
                Margin="20"
                Clicked="Voltar_Clicked" />
    </Grid>
</ContentPage>