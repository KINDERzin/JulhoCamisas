<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulhoCamisas.ListaAcabamentoPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#d9d9d9">
             
    <VerticalStackLayout>
    
            <Image Source="logo.png"
                Aspect="AspectFit"
                HeightRequest="200"
                HorizontalOptions="Center"
                Margin="10, 20, 10, 0"/>

            <Label Text="Lista de acabamentos"
                   TextColor="Black"
                   FontSize="30"
                   HorizontalOptions="Center"
                   Margin="20, 10"/>

        <Frame BackgroundColor="#d1d1d1"
               Margin="20, 10"
               HeightRequest="400"
               Grid.Row="1">
            <VerticalStackLayout>
                <ListView x:Name="ListaAcabamento"
                        HasUnevenRows="True"
                        ItemSelected="itemSelecionado"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <VerticalStackLayout BackgroundColor="#d1d1d1">
                                    <HorizontalStackLayout>
                                        <Label Text="{Binding Tipo}"
                                            TextColor="Black"
                                            FontSize="20"/>
                                    </HorizontalStackLayout>

                                    <Label Text="{Binding Fornecedor}"
                                           TextColor="Black"
                                           FontSize="20"/>

                                </VerticalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </VerticalStackLayout>
        </Frame>
        
        <Button Text="Adicionar novo acabamento"
                BackgroundColor="#8b8b8b"
                FontSize="16"
                TextColor="Black"
                Clicked="NovoAcabamentoClicked"
                Margin="50,5"
                Grid.Row="2"/>

        <Button Text="Voltar"
                BackgroundColor="#8b8b8b"
                FontSize="16"
                TextColor="Black"
                Clicked="clicouBotaoVoltar"
                Margin="50,5"
                Grid.Row="3"/>
        </VerticalStackLayout>
</ContentPage>